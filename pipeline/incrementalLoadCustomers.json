				"typeProperties": {
					"storedProcedureName": "[dbo].[usp_InsertPipelineMetadata]",
					"storedProcedureParameters": {
						"NewWatermark": {
							"value": {
								"value": "@variables('NewWatermark')",
								"type": "Expression"
