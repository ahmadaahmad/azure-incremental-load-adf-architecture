					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "OldWatermark",
					"value": {
						"value": "@activity('SQL select max watermark').output.firstRow.LastWatermarkVal",
						"type": "Expression"
					}
				}
			}
		],
		"variables": {
			"NewWatermark": {
				"type": "String"
			},
			"NewRowCount": {
